<div class="columns">
    <div class="column is-8 is-centered">

        <%= simple_form_for @bonsai, html: { multipart: true } do |f| %>
        <%= f.error_notification %>

        <div class="columns">

            <div class="field column is-6">
                <div class="control">
                    <%= f.input :name, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
                </div>
            </div>

            <div class="field column">
                <div class="control">
                    <%= f.input :price, required: true, input_html: { class:"input", maxlength: 7  }, wrapper: false, label_html: { class:"label" } %>
                </div>
            </div>

        </div>

        <div class="field">
            <div class="control">
                <%= f.input :description, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
            </div>
        </div>

        <div class="field column is-6">
            <div class="control">
                <%= f.input :type_of, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
            </div>
        </div>

        <div class="field">
            <div class="control">
                <label class="label">Add images</label>
                <div class="file">
                    <label class="file-label">
                        <%= f.input :image, as: :file, input_html: { class:"file-input bonsai-image" }, label: false, wrapper: false %>
                        <span class="file-cta">
                            <span class="file-icon"><i class="fa fa-upload"></i></span>
                            <span class="file-label">
                                Choose a fileâ€¦</span>
                            </span>
                    </label>
                </div>
            </div>
        </div>
        
        <hr />
        <div class="columns">
            
            <div class="column">
                <div class="control">
                    <%= f.button :submit, class: 'button is-success' %>
                    <%= link_to 'Cancel', bonsais_path, class:'button is-light' %>
                </div>
                <% end %>
            </div>

        </div>
            
    </div>
        
</div>