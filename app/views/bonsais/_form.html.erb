<%= simple_form_for @bonsai, html: { multipart: true } do |f| %>
<%= f.error_notification %>

<div class="columns">

    <div class="column is-6">
        <div class="control">
            <%= f.input :name, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
        </div>
    </div>

    <div class="column">
        <div class="control">
            <%= f.input :price, required: true, input_html: { class:"input", maxlength: 7  }, wrapper: false, label_html: { class:"label" } %>
        </div>
    </div>

</div>

<div class="column">
    <div class="control">
        <%= f.input :description, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
    </div>
</div>

<div class="field">
    <div class="field column is-8">
        <div class="field is-horizontal">
            <label class="label">Bonsai Type</label>
            <div class="control has-icons-left">
                <span class="select">
                    <%= f.input_field :type_of, collection: Bonsai::TYPE, prompt: "Select type" %>
                </span>
                <span class="icon is-small is-left">
                    <i class="fa fa-tag"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="file has-name is-fullwidth">
        <div class="control-images">
            <label class="label">Add Image</label>
            <div class="file">
                <label class="file-label">
                    <%= f.input :image, as: :file, input_html: { class:"file-input bonsai-image" }, label: false, wrapper: false %>
                    <span class="file-cta">
                        <span class="file-icon"><i class="fa fa-upload"></i></span>
                        <span class="file-label">
                            Choose a Fileâ€¦..
                        </span>
                    </span>
                    <span class="file-name">
                        bonsai-picture.png
                    </span>
                </label>
            </div>
        </div>
    </div>
    <output id="list"></output>
    <hr />

    <div class="column">
        <div class="control">
            <%= f.button :submit, class: 'button is-success' %>
            <%= link_to 'Cancel', bonsais_path, class:'button is-light' %>
        </div>
    </div>

    <% end %>