<!DOCTYPE html>
<html>
  <head>
    <title>BonsaiEcom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' %>
    
   
  </head>
  <body class="<%= yield (:body_class) %>">
    <% if flash.now[:notice] %>
    <div class="notification is-success global-notification">
      <p class="notice"><%= notice %></p>
    </div>
    <% end %>
    <% if flash[:alert] %>
    <div class="notification is-danger global-notification">
      <p class="alert"><%= alert %></p>
    </div>
    <% end %>

    <nav class="navbar is-light" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to root_path, class:"navbar-item" do %>
        <h1 class="title is-5">Bonsai Plants</h1>
        <% end  %>
        <div class="navbar-burger burger" data-target="navbar">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
      <a class="navbar-item">
        <%= link_to 'About Us', about_path, class: "navbar-item" %>
      </a>
      
      <a class="navbar-item">
      <%= link_to 'Contact Us', contact_path, class: "navbar-item" %>
      </a>

      <a class="navbar-item">
        <%= link_to 'FAQs', help_path, class: "navbar-item" %>
      </a>
  
      <div id="navbar" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            
              
              <% if user_signed_in? %>
              
              <%= link_to 'Sell a Bonsai', new_bonsai_path, class: "navbar-item button is-dark" %>
              <div class="navbar-item has-dropdown is-hoverable">
                <%= link_to 'Account', edit_user_registration_path, class: "navbar-link" %>
                <div class="navbar-dropdown is-right">
                  <%= link_to current_user.name, edit_user_registration_path, class:"navbar-item" %>
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"navbar-item" %>
                </div>
              </div>
              <% else %>
              <div class="field is-grouped">
                <p class="control">
                  <%= link_to "Sign In", new_user_session_path, class:"navbar-item button is-primary" %>
                </p>
                <p class="control">
                  <%= link_to "GitHub", user_github_omniauth_authorize_path, class:"navbar-item button is-primary" %>
                </p>
                <p class="control">
                  <%= link_to "Sign up", new_user_registration_path, class:"navbar-item button is-dark" %>
                </p>
              </div>
              <% end %>
  
            </div>
          </div>
        </div>
      </div>
    </nav>

  <body >

<div class="hero-class">
  <section class="hero is-primary">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          The Bonsai Store
        </h1>
        <h2 class="subtitle">
          World Class Bonsai Delivered to Your Door!
        </h2>
      </div>
    </div>
  </section>
</div>

    <%= yield %>
  </body>
</html>
